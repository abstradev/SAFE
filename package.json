{
  "name": "safe",
  "version": "0.3.0",
  "description": "SAFE - Single App For Everything",
  "main": "main.js",
  "build": {
    "appId": "dev.abstra.safe",
    "mac": {
      "category": "productivity"
    }
  },
  "extraFiles": [
    {
      "from": "resources",
      "to": "resources",
      "filter": [
        "**/*"
      ]
    }
  ],
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NOSDuco/safe.git"
  },
  "author": "Tony Duco <nosduco@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NOSDuco/safe/issues"
  },
  "homepage": "https://github.com/NOSDuco/safe#readme",
  "devDependencies": {
    "electron": "^18.3.7",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "about-window": "^1.13.2",
    "electron-context-menu": "^0.15.0",
    "fs-extra": "^8.1.0",
    "ncp": "^2.0.0",
    "object-hash": "^1.3.1"
  }
}
